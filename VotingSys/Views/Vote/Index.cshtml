@model IEnumerable<VotingSys.Models.Vote>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>

            <th>Actions</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("ShowOptions", "ShowOptions", new { voteId = item.Id }, new { @class = "btn btn-sm btn-info" })
                    @using (Html.BeginForm("Delete", "Vote", FormMethod.Post, new { @style = "display:inline;" }))
                    {
                        @Html.Hidden("id", item.Id)
                        <input type="submit" value="Delete" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this record?');" />
                    }

                </td>
            </tr>
        }
    </tbody>

</table>
